<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/black"
    android:backgroundTint="@android:color/holo_orange_dark"
    tools:context=".ReservationActivity">

    <CalendarView
        android:id="@+id/terrain1"
        android:layout_width="404dp"
        android:layout_height="292dp"
        android:layout_marginTop="36dp"
        android:backgroundTint="@android:color/holo_orange_dark"
        android:focusedMonthDateColor="@android:color/holo_orange_dark"
        android:foregroundTint="@color/black"
        android:selectedDateVerticalBar="@color/black"
        android:selectedWeekBackgroundColor="@color/black"
        android:unfocusedMonthDateColor="@color/black"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.428"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/textView5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Reservation Terrain 1"
        app:layout_constraintBottom_toTopOf="@+id/terrain1"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.39" />

    <Button
        android:id="@+id/saveData"
        android:layout_width="394dp"
        android:layout_height="53dp"
        android:layout_marginBottom="16dp"
        android:backgroundTint="#05482F"
        android:text="Reservation"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.47"
        app:layout_constraintStart_toStartOf="parent" />

    <TimePicker
        android:id="@+id/timePicker1"
        android:layout_width="389dp"
        android:layout_height="344dp"
        android:headerBackground="#05482F"
        android:numbersSelectorColor="#05482F"
        app:layout_constraintBottom_toTopOf="@+id/saveData"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.473"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/terrain1"
        app:layout_constraintVertical_bias="0.0" />

    <TextView
        android:id="@+id/textView13"
        android:layout_width="93dp"
        android:layout_height="19dp"
        android:layout_marginTop="117dp"
        android:layout_marginBottom="208dp"
        android:text="Indisponible"
        app:layout_constraintBottom_toBottomOf="@+id/timePicker1"
        app:layout_constraintEnd_toEndOf="@+id/timePicker1"
        app:layout_constraintHorizontal_bias="0.051"
        app:layout_constraintStart_toStartOf="@+id/timePicker1"
        app:layout_constraintTop_toTopOf="@+id/timePicker1"
        app:layout_constraintVertical_bias="0.0" />

    <TextView
        android:id="@+id/textView4"
        android:layout_width="66dp"
        android:layout_height="127dp"
        android:layout_marginEnd="300dp"
        android:text=""
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="@+id/timePicker1"
        app:layout_constraintHorizontal_bias="0.928"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView13"
        app:layout_constraintVertical_bias="0.062" />


</androidx.constraintlayout.widget.ConstraintLayout>