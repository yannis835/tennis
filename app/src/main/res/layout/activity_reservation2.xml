<?xml version="1.0" encoding="utf-8"?>
    <androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/black"
        android:backgroundTint="@android:color/holo_orange_dark"
        tools:context=".ReservationActivity2">

        <CalendarView
            android:id="@+id/terrain2"
            android:layout_width="404dp"
            android:layout_height="292dp"
            android:layout_marginTop="36dp"
            android:backgroundTint="@android:color/holo_orange_dark"
            android:focusedMonthDateColor="@android:color/holo_orange_dark"
            android:foregroundTint="@color/black"
            android:selectedDateVerticalBar="@color/black"
            android:selectedWeekBackgroundColor="@color/black"
            android:unfocusedMonthDateColor="@color/black"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.428"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/textView5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Reservation Terrain 2"
            app:layout_constraintBottom_toTopOf="@+id/terrain2"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.39" />

        <Button
            android:id="@+id/saveData"
            android:layout_width="394dp"
            android:layout_height="53dp"
            android:layout_marginBottom="16dp"
            android:backgroundTint="#05482F"
            android:text="Reservation"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.47"
            app:layout_constraintStart_toStartOf="parent" />

        <TimePicker
            android:id="@+id/timePicker2"
            android:layout_width="389dp"
            android:layout_height="344dp"
            android:headerBackground="#05482F"
            android:numbersSelectorColor="#05482F"
            app:layout_constraintBottom_toTopOf="@+id/saveData"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.473"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/terrain2"
            app:layout_constraintVertical_bias="0.0" />

    <TextView
        android:id="@+id/textView13"
        android:layout_width="131dp"
        android:layout_height="21dp"
        android:layout_marginTop="117dp"
        android:layout_marginBottom="208dp"
        android:text="Indisponible"
        app:layout_constraintBottom_toBottomOf="@+id/timePicker2"
        app:layout_constraintEnd_toEndOf="@+id/timePicker2"
        app:layout_constraintHorizontal_bias="0.051"
        app:layout_constraintStart_toStartOf="@+id/timePicker2"
        app:layout_constraintTop_toTopOf="@+id/timePicker2"
        app:layout_constraintVertical_bias="0.0" />

    <TextView
        android:id="@+id/textView8"
        android:layout_width="57dp"
        android:layout_height="122dp"
        android:layout_marginEnd="316dp"
        android:text=""
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="@+id/timePicker2"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView13"
        app:layout_constraintVertical_bias="0.056" />


</androidx.constraintlayout.widget.ConstraintLayout>